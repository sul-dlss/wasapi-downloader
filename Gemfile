source 'https://rubygems.org'

group :deployment do
  gem 'capistrano'
  gem 'capistrano-one_time_key' # to ssh to boxes, usually included via dlss-capistrano;
                                # however, dlss-capistrano does a bundle-audit
  gem 'capistrano-shared_configs' # to update shared_configs as part of deployment
                                  # usually included via dlss-capistrano;
                                  # however, dlss-capistrano does a bundle-audit
end
